<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.motion.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/motion_animator">

    <ImageView
        android:id="@+id/my_closet_image_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/anim_sharona_logo"/>

    <Button
        android:id="@+id/my_closet_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="fragment test"
        app:layout_constraintTop_toBottomOf="@id/my_closet_image_view"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_closet_clothes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_closet_button"/>


</android.support.constraint.motion.MotionLayout>